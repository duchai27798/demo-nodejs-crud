<%- contentFor('content') %>
<div class="min-vh-100 d-flex justify-content-center align-items-center">
    <form action="/login" method="post" class="login-form">
        <h3 class="size-22 font-weight-bolder text-center m-b-20">Account</h3>
        <% if (errors) { %>
            <div class="alert-danger p-2 mb-3">
                <%= errors %>
            </div>
        <% } %>
        <div class="form-group">
            <label for="input-email" class="size-14 font-weight-bold">Email address</label>
            <input type="email" class="form-control" id="input-email" name="email" placeholder="name@example.com">
        </div>
        <div class="form-group m-b-30">
            <label for="input-email" class="size-14 font-weight-bold">password</label>
            <input type="password" class="form-control" id="input-password" name="password" placeholder="Password">
        </div>
        <button class="btn btn-success m-b-30 w-100">Login</button>
        <div class="text-black-50 text-center mb-1">
            Can't login?
            <a href="" class="text-primary">Forgot password</a>
        </div>
        <div class="text-black-50 text-center">
            Create an account?
            <a href="/register" class="text-primary">Sign up</a>
        </div>
    </form>
</div>
